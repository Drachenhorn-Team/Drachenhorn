<UserControl x:Class="DSACharacterSheet.Desktop.UserControls.CoatOfArmsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:lang="clr-namespace:DSACharacterSheet.Desktop.Lang"
             xmlns:local="clr-namespace:DSACharacterSheet.Desktop.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="400">
    <DockPanel Margin="5">
        <TextBlock Text="{lang:Translate CharacterSheet.CoatOfArms}"
                   TextAlignment="Center" DockPanel.Dock="Top" FontSize="24"/>
        <Button Content="{lang:Translate UI.Edit}" Click="EditButton_Click" Margin="5" DockPanel.Dock="Bottom"/>
        <Border BorderBrush="{StaticResource BorderColor}" BorderThickness="3" HorizontalAlignment="Center"
                VerticalAlignment="Center" Margin="5" Background="GhostWhite">
            <InkPresenter Strokes="{Binding Strokes}" ClipToBounds="True"
                          Width="{Binding Width}" Height="{Binding Height}" Margin="2"/>
        </Border>
    </DockPanel>
</UserControl>
