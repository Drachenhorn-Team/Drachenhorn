<UserControl x:Class="DSACharacterSheet.Desktop.UserControls.CharacterSheetControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
            xmlns:controls="clr-namespace:DSACharacterSheet.Desktop.UserControls"
             xmlns:local="clr-namespace:DSACharacterSheet.Desktop.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="1200" d:DesignWidth="900">
    <StackPanel>
        <StackPanel.Resources>
            <ResourceDictionary>
                <Style TargetType="TextBlock" BasedOn="{StaticResource Morpheus}">
                    <Setter Property="Margin" Value="5"/>
                    <Setter Property="VerticalAlignment" Value="Center"/>
                </Style>
                <Style TargetType="TextBox">
                    <Setter Property="Margin" Value="5"/>
                    <Setter Property="VerticalAlignment" Value="Center"/>
                </Style>
                <Style TargetType="Border">
                    <Setter Property="Background" Value="GhostWhite"/>
                    <Setter Property="BorderBrush" Value="Gray"/>
                    <Setter Property="BorderThickness" Value="2"/>
                    <Setter Property="CornerRadius" Value="5"/>
                    <Setter Property="Margin" Value="5"/>
                </Style>
            </ResourceDictionary>
        </StackPanel.Resources>

        <Image Source="/DSACharacterSheet.Core;component\Images\DSALogo.gif" Width="300"/>
        <TextBlock Text="Heldendokument" FontSize="50" FontWeight="Bold" TextAlignment="Center"/>

        <Border>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="3*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Text="Name" Grid.Column="0" Grid.Row="0"/>
                <TextBox Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}" Grid.Column="1" Grid.Row="0"/>
                <TextBlock Text="GP-Basis" Margin="5" Grid.Column="2" Grid.Row="0"/>
                <TextBox Text="{Binding GPBase, UpdateSourceTrigger=PropertyChanged}" Grid.Column="3" Grid.Row="0"/>

                <TextBlock Text="Rasse" Grid.Column="0" Grid.Row="1"/>
                <TextBox Text="{Binding Race.Name, UpdateSourceTrigger=PropertyChanged}" Grid.Column="1" Grid.Row="1"/>
                <TextBlock Text="Modifikator" Grid.Column="2" Grid.Row="1"/>
                <TextBox Text="{Binding Race.GPCost, UpdateSourceTrigger=PropertyChanged}" Grid.Column="3" Grid.Row="1"/>

                <TextBlock Text="Kultur" Grid.Column="0" Grid.Row="2"/>
                <Grid Grid.Column="1" Grid.Row="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBox Text="{Binding Culture.Name, UpdateSourceTrigger=PropertyChanged}" Grid.Column="0"/>
                    <TextBox Text="{Binding Culture.Spezification, UpdateSourceTrigger=PropertyChanged}" Grid.Column="1"/>
                </Grid>
                <TextBlock Text="Modifikator" Grid.Column="2" Grid.Row="2"/>
                <TextBox Text="{Binding Culture.GPCost, UpdateSourceTrigger=PropertyChanged}" Grid.Column="3" Grid.Row="2"/>

                <TextBlock Text="Profession" Grid.Column="0" Grid.Row="3"/>
                <TextBox Text="{Binding Profession.Name, UpdateSourceTrigger=PropertyChanged}" Grid.Column="1" Grid.Row="3"/>
                <TextBlock Text="Modifikator" Grid.Column="2" Grid.Row="3"/>
                <TextBox Text="{Binding Profession.GPCost, UpdateSourceTrigger=PropertyChanged}" Grid.Column="3" Grid.Row="3"/>

            </Grid>
        </Border>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="250"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0">
                <controls:CharacterInformationControl DataContext="{Binding CharacterInformation}"/>
            </Border>

            <Border Grid.Column="1">
                <StackPanel>
                    <TextBlock Text="Wappen/Portrait" TextAlignment="Center"/>
                </StackPanel>
            </Border>

            <Border Grid.Column="2">
                <controls:SocialInformationControl DataContext="{Binding SocialInformation}"/>
            </Border>
        </Grid>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0">
                <controls:AdvantageInformationControl DataContext="{Binding Advantages}"/>
            </Border>

            <Border Grid.Column="1">
                <controls:AdvantageInformationControl DataContext="{Binding Disadvantages}"/>
            </Border>
        </Grid>

        <TextBlock Text="Eigenschaften &amp; Basiswerte" FontSize="45" FontWeight="Bold" TextAlignment="Center"/>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0">
                <controls:AttributesControl DataContext="{Binding Attributes}"/>
            </Border>

            <Border Grid.Column="1">
                <controls:BaseValuesControl DataContext="{Binding BaseValues}"/>
            </Border>
        </Grid>

        <Border>
            <controls:AdventurePointsControl DataContext="{Binding AdventurePoints}"/>
        </Border>
    </StackPanel>
</UserControl>
