<UserControl x:Class="DSACharacterSheet.Desktop.UserControls.Template.RaceTemplateControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DSACharacterSheet.Desktop.UserControls.Template"
             xmlns:common="clr-namespace:DSACharacterSheet.Xml.Sheet.Common;assembly=DSACharacterSheet.Xml"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <DockPanel>
        <ListBox Name="RaceList" ItemsSource="{Binding .}"
                 DockPanel.Dock="Left">
            <ItemsControl.ItemTemplate>
                <DataTemplate DataType="common:RaceInformation">
                    <TextBlock Text="{Binding Name}"/>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ListBox>

        <Separator Style="{StaticResource VerticalSeperatorStyle}" DockPanel.Dock="Left"/>
        
        <Grid>

        </Grid>
    </DockPanel>
</UserControl>
