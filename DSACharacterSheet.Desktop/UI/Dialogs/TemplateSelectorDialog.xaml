<Window x:Class="DSACharacterSheet.Desktop.UI.Dialogs.TemplateSelectorDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DSACharacterSheet.Desktop.UI.Dialogs"
        xmlns:lang="clr-namespace:DSACharacterSheet.Desktop.UI.Lang"
        mc:Ignorable="d"
        Title="TemplateSelectorDialog" Height="450" Width="800">
    <DockPanel>
        <WrapPanel DockPanel.Dock="Bottom" HorizontalAlignment="Right">
            <Button Content="{lang:Translate UI.Open}" Click="OpenButton_OnClick" DockPanel.Dock="Bottom"
                    Margin="5"/>
            <Button Content="{lang:Translate UI.New}" Click="NewButton_OnClick" DockPanel.Dock="Bottom"
                    Margin="5"/>
        </WrapPanel>
        
        <ListBox Name="TemplateList" Margin="5"/>
    </DockPanel>
</Window>
