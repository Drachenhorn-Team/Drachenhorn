<Window x:Class="DSACharacterSheet.Desktop.UI.Dialogs.ConsoleWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DSACharacterSheet.Desktop.UI.Dialogs"
        mc:Ignorable="d"
        Background="Black"
        ResizeMode="NoResize"
        Title="Console" Height="200" Width="500">
    <Grid>
        <ScrollViewer Margin="0">
            <RichTextBox Name="RichTextBox" IsReadOnly="True"
                         Background="Transparent"
                         Foreground="White"
                         FontFamily="Consolas"/>
        </ScrollViewer>
    </Grid>
</Window>
