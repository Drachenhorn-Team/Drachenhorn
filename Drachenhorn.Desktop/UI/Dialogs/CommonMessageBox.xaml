                 xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
                 mc:Ignorable="d"
                 MinWidth="300"
                 WindowStartupLocation="CenterScreen"
                 ResizeMode="NoResize" TitleCharacterCasing="Normal"
