<Window x:Class="Drachenhorn.Desktop.UI.Dialogs.ChangelogDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Drachenhorn.Desktop.UI.Dialogs"
        xmlns:lang="clr-namespace:Drachenhorn.Desktop.UI.Lang"
        mc:Ignorable="d"
        Title="ChangelogDialog" Height="450" Width="800">
    <DockPanel>
        <WrapPanel DockPanel.Dock="Bottom" HorizontalAlignment="Right">
            <Button Content="{lang:Translate Updater.DoUpdate}" Margin="5"/>
            <Button Content="{lang:Translate Updater.Dismiss}" Margin="5"/>
        </WrapPanel>
        <ScrollViewer>
            <ItemsControl ItemsSource="{Binding Changes}"/>
        </ScrollViewer>
    </DockPanel>
</Window>
