<UserControl x:Class="Drachenhorn.Desktop.UserControls.Common.APTableControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Drachenhorn.Desktop.UserControls.Common"
             xmlns:ap="clr-namespace:Drachenhorn.Xml.Data.AP;assembly=Drachenhorn.Xml"
             xmlns:converter="clr-namespace:Drachenhorn.Desktop.Converter"
             xmlns:lang="clr-namespace:Drachenhorn.Desktop.UI.Lang"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" d:DataContext="{d:DesignInstance ap:APTable}">
    <DockPanel Grid.IsSharedSizeScope="True">
        <Grid DockPanel.Dock="Left">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" SharedSizeGroup="Name"/>
                <RowDefinition Height="Auto" SharedSizeGroup="Negative"/>
                <RowDefinition Height="Auto" SharedSizeGroup="Factor"/>
                <RowDefinition Height="*" SharedSizeGroup="Values"/>
            </Grid.RowDefinitions>
            <TextBlock Text="{lang:Translate APColumn.Name}" Grid.Row="0"/>
            <TextBlock Text="{lang:Translate APColumn.Negative}" Grid.Row="1"/>
            <TextBlock Text="{lang:Translate APColumn.Factor}" Grid.Row="2"/>
            <TextBlock Text="{lang:Translate APColumn.Values}" Grid.Row="3" VerticalAlignment="Top"/>
        </Grid>
        <ItemsControl ItemsSource="{Binding APColumns}">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <StackPanel Orientation="Horizontal"/>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" SharedSizeGroup="Name"/>
                            <RowDefinition Height="Auto" SharedSizeGroup="Negative"/>
                            <RowDefinition Height="Auto" SharedSizeGroup="Factor"/>
                            <RowDefinition Height="*" SharedSizeGroup="Values"/>
                        </Grid.RowDefinitions>
                        <TextBlock Text="{Binding Name}" Margin="5" Grid.Row="0"/>
                        <TextBlock Text="{Binding Negative}" HorizontalAlignment="Center" Grid.Row="1"/>
                        <TextBlock Text="{Binding Factor}" HorizontalAlignment="Center" Grid.Row="2"/>
                        <Grid Grid.Row="3">
                            <ItemsControl ItemsSource="{Binding Costs}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding .}" HorizontalAlignment="Center"/>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </Grid>
                    </Grid>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </DockPanel>
</UserControl>
