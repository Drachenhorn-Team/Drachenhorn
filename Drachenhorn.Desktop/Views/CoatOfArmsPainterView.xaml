        <Border Name="InkBorder" Background="GhostWhite" BorderBrush="{StaticResource BorderBrush}"
                BorderThickness="1" HorizontalAlignment="Center" VerticalAlignment="Center"
                Width="910" Height="610">
            <InkCanvas Name="Canvas" Strokes="{Binding Strokes}" ClipToBounds="True"
                       Height="{Binding ElementName=InkBorder, Path=ActualHeight}"
                       Width="{Binding ElementName=InkBorder, Path=ActualWidth}"
                       VerticalAlignment="Top" HorizontalAlignment="Left">
                <InkCanvas.DefaultDrawingAttributes>
                    <DrawingAttributes Height=".7" Width=".7" />
                </InkCanvas.DefaultDrawingAttributes>
                <InkCanvas.RenderTransform>
                    <ScaleTransform x:Name="InkCanvasScaleTransform" />
                </InkCanvas.RenderTransform>
            </InkCanvas>
        </Border>
