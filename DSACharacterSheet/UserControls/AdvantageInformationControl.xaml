<UserControl x:Class="DSACharacterSheet.UserControls.AdvantageInformationControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DSACharacterSheet.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <DataGrid MinHeight="200" AutoGenerateColumns="False" ItemsSource="{Binding .}" Margin="5" PreviewMouseWheel="DataGrid_PreviewMouseWheel">
        <DataGrid.Columns>
            <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="Auto"/>
            <DataGridTextColumn Header="Spezialisierung" Binding="{Binding Specialisation}" Width="*"/>
            <DataGridTextColumn Header="GP-Kosten" Binding="{Binding GPCost}" Width="Auto"/>
        </DataGrid.Columns>
    </DataGrid>
</UserControl>
