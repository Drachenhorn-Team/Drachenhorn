<Window x:Class="DSACharacterSheet.Splash.SplashScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DSACharacterSheet.Splash"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen" WindowStyle="None"
        AllowsTransparency="True" Background="Transparent"
        Title="SplashScreen" Height="250" Width="500">
    <Border Background="Wheat" CornerRadius="50" BorderThickness="3">
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Image Source="..\Images\DSALogo.gif" VerticalAlignment="Center" HorizontalAlignment="Center" Grid.Row="0"/>
            <TextBlock Text="Lade. Bitte warten." HorizontalAlignment="Center" Grid.Row="1" FontSize="25" Style="{StaticResource Morpheus}"/>

        </Grid>
    </Border>
</Window>
